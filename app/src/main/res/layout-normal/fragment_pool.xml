<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <TextView
        android:id="@+id/textViewPool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/initSuccesses"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/cyanogenblue"
        android:textSize="60sp"
        android:layout_above="@+id/pickersPool"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:id="@+id/pickersPool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <NumberPicker
            android:id="@+id/numberPickerPoolLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <NumberPicker
            android:id="@+id/numberPickerPoolRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonPool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="70sp"
        android:textColor="@color/white"
        android:text="@string/rollButton"
        android:textSize="25sp"
        android:width="250sp"
        android:background="@drawable/button_pool"
        android:layout_below="@+id/pickersPool"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>