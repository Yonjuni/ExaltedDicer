<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/settings_title">
        <CheckBoxPreference
            android:id="@+id/enableShaking"
            android:key="enable_shaking"
            android:title="@string/enable_shaking"
            android:defaultValue="true" />
        <CheckBoxPreference
            android:id="@+id/enableVibration"
            android:key="enable_vibration"
            android:title="@string/vibration_title"
            android:defaultValue="true" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/about">
        <Preference
            android:key="version_info"
            android:summary="@string/version_number"
            android:title="@string/version" />
    </PreferenceCategory>
</PreferenceScreen>