<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242" >

    <TextView
        android:id="@+id/textViewPOOL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/initSuccesses"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#0099CC"
        android:textSize="40sp" />
         
    <NumberPicker
        android:id="@+id/numberPickerPOOL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewPOOL"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <Button
        android:id="@+id/buttonPOOL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberPickerPOOL"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="@string/rollButton"
        android:background="#0099CC" 
        android:height="70sp"
        android:width="200sp"
        android:textSize="25sp"/>

</RelativeLayout>
